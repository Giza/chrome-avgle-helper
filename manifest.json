{
	"manifest_version": 2,
	"name": "Avgle Helper",
	"version": "1.1.0",
	"description": "A Chrome extension for enhancing Avgle website",
	"background": {
		"scripts": ["dist/index.js"],
		"persistent": true
	},
	"content_scripts": [{
		"matches": ["*://avgle.com/*"],
		"run_at": "document_end",
		"all_frames": false,
		"js": ["dist/inject_to_normal.js"]
	}],
	"icons": {
		"128": "icons/128.png"
	},
	"permissions": [
		"tabs",
		"notifications",
		"webRequest",
		"*://*/*"
	]
}
